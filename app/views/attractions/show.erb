<h3>
  <style color="#33ccff">
    <% if flash.has?(:notice) %>
      <%= flash[:notice] %>
    <% end %>
  </style>
</h3>

<h3><%= @attraction.name %></h3>
<br><br>

<%= @attraction.descriptio n%>
<br><br>

<% if !!@attraction && @attraction.user == @current_user %>
  <a href="/attractions/<%= @attraction.slug %>/edit"><input type="submit" value="Edit"/></a>
<% end %>

<% @attraction.reviews.each do |review| %>
  <%= review.user.username %>
  <% if !!review.updated_at %>
    <%= review.updated_at.strftime("%B, %d, %Y") %>
  <% else %>
    <%= review.created_at.strftime("%B, %d, %Y") %>
  <% end %>
  <br>

  <%= review.content %> 
  <% if logged_in? && review.user == current_user %>
  <a href="/locations/<%=@location.slug%>/edit"><input type="submit" value="Edit Location"/></a>
  <% end %>
<% end %>