<% content_for :title, "- #{@location.name} - Edit" %>

<div style="margin-bottom: 100px;">
  <h3><%=current_user.username%>, here you can edit your listing:</h3>
  <br><br>
  
  <form action="/locations/<%=@location.slug%>" method="POST" id="location_edit">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
  
    <p>
      <label>Name:</label>
      <input style="margin-left: 37px" type="text" name="location[name]" value="<%=@location.name%>">
    </p>
    <p>
      <label>Image:</label>
      <input style="margin-left: 35px" type="text" name="location[img_url]" value="<%= @location.img_url %>">
    </p>
    <p>
      <label>Description:</label>
      <textarea style="margin-top: 5px;" name="location[description]">
        <%= @location.description %>
      </textarea>
    </p>
    <br><br><br>
  
  </form>
  
  <input style="padding: 3px;"form="location_edit" type="submit" value="Submit changes">
  <a href="/locations/<%=@location.slug%>"><button style="padding: 3px;" type="button">Cancel</button></a>
</div>