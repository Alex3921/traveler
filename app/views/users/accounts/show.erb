<h3>
  <font color="#33ccff">
    <% if flash.has?(:notice) %>
      <%= flash[:notice] %>
    <% end %>
  </font>
</h3>

<br>

<label>Username:</label>
<%= @current_user.username %>

<label>E-mail:</label>
<%= @current_user.email %>

<br><br>

<a href="/accounts/<%=@current_user.slug%>/edit"><input type="submit" value="Edit"/></a>
<form onsubmit="return confirm('Are you sure you want to delete your account?')" action="/accounts/<%=@current_user.slug%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete"/>
</form>